# 开发环境配置
# 用于本地开发调试

# 应用基础配置
VITE_APP_TITLE=招商线索流通平台 - 开发环境
VITE_APP_ENV=development
VITE_APP_DEBUG=true
VITE_APP_LOG_LEVEL=debug

# API配置
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=10000

# 功能开关
VITE_FEATURE_MOCK_API=false
VITE_FEATURE_DEVTOOLS=true
VITE_FEATURE_ANALYTICS=false

# 开发专用配置
VITE_DEV_HOT_RELOAD=true
VITE_DEV_OVERLAY=true

# 第三方服务配置
VITE_ECHARTS_CDN=https://cdn.jsdelivr.net/npm/echarts@5/dist/echarts.min.js
VITE_MAP_API_KEY=dev_api_key

# 文件上传配置
VITE_UPLOAD_MAX_SIZE=10485760
VITE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# 分页配置
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# 缓存配置（开发环境缓存时间较短便于调试）
VITE_CACHE_EXPIRE_TIME=1800000

# 安全配置
VITE_TOKEN_EXPIRE_TIME=7200000
VITE_REFRESH_TOKEN_EXPIRE_TIME=604800000