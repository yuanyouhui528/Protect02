# 测试环境配置
# 用于单元测试、集成测试和E2E测试

# 应用基础配置
VITE_APP_TITLE=招商线索流通平台 - 测试环境
VITE_APP_ENV=test
VITE_APP_DEBUG=true
VITE_APP_LOG_LEVEL=debug

# API配置
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=5000

# 功能开关
VITE_FEATURE_MOCK_API=true
VITE_FEATURE_DEVTOOLS=true
VITE_FEATURE_ANALYTICS=false

# 测试专用配置
VITE_TEST_USER_EMAIL=test@example.com
VITE_TEST_USER_PASSWORD=test123456
VITE_TEST_COMPANY_NAME=测试公司

# 第三方服务配置（测试环境使用mock或测试服务）
VITE_ECHARTS_CDN=https://cdn.jsdelivr.net/npm/echarts@5/dist/echarts.min.js
VITE_MAP_API_KEY=test_api_key

# 文件上传配置（测试环境限制更小）
VITE_UPLOAD_MAX_SIZE=5242880
VITE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# 分页配置（测试环境使用较小的分页）
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=50

# 缓存配置（测试环境缓存时间较短）
VITE_CACHE_EXPIRE_TIME=300000

# 安全配置（测试环境token过期时间较短）
VITE_TOKEN_EXPIRE_TIME=1800000
VITE_REFRESH_TOKEN_EXPIRE_TIME=86400000

# 测试数据库配置
VITE_TEST_DB_RESET=true
VITE_TEST_SEED_DATA=true