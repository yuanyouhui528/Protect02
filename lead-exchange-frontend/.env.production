# 生产环境配置
# 用于正式生产部署

# 应用基础配置
VITE_APP_TITLE=招商线索流通平台
VITE_APP_ENV=production
VITE_APP_DEBUG=false
VITE_APP_LOG_LEVEL=error

# API配置
VITE_API_BASE_URL=https://api.lead-exchange.com/api
VITE_API_TIMEOUT=15000

# 功能开关
VITE_FEATURE_MOCK_API=false
VITE_FEATURE_DEVTOOLS=false
VITE_FEATURE_ANALYTICS=true

# 生产专用配置
VITE_PROD_SOURCE_MAP=false
VITE_PROD_MINIFY=true
VITE_PROD_GZIP=true

# 第三方服务配置
VITE_ECHARTS_CDN=https://cdn.jsdelivr.net/npm/echarts@5/dist/echarts.min.js
VITE_MAP_API_KEY=prod_api_key

# 文件上传配置
VITE_UPLOAD_MAX_SIZE=20971520
VITE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# 分页配置
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=200

# 缓存配置（生产环境缓存时间较长）
VITE_CACHE_EXPIRE_TIME=7200000

# 安全配置
VITE_TOKEN_EXPIRE_TIME=3600000
VITE_REFRESH_TOKEN_EXPIRE_TIME=259200000

# 性能监控配置
VITE_PERFORMANCE_MONITOR=true
VITE_ERROR_REPORTING=true

# CDN配置
VITE_STATIC_CDN=https://cdn.lead-exchange.com
VITE_ASSETS_CDN=https://assets.lead-exchange.com